@{
    ViewData["Title"] = "Home Page";

    List<TbCategory> myCategories = new List<TbCategory>();
    List<TbTodo> myTodos = new List<TbTodo>();
    List<TbUser> myUsers = new List<TbUser>();

    myCategories = Model.TbCategory;
    myTodos = Model.TbTodo;
    myUsers = Model.TbUser;



}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <div class="row">

        <div class="col-md-3">

            <form method="post" asp-controller="Home" asp-action="Index">

                <div class="row">

                   <select id="CategoryId" class="form-control" name="CategoryId">
                   @foreach (var item in myCategories)
                    {
                        <option value="@item.Id">@item.Category</option>
                        }
                   <input type="hidden" id="userid" name="userid" value="@myTodos[0].UserId" />
                   <input type="hidden" id="status" name="status" value="False" />
                   <input type="hidden" id="sequence" name="sequence" value="@(myTodos.Count+1)" />
                    </select>


                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1" class="form-label">Todo</label>
                    <input type="text" class="form-control" id="TodoDesc" name="TodoDesc">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>




        </div>




    </div>



    <h3>ToDos Application</h3>
</div>

@foreach (var item in myTodos)
{
    <h4>@item.Sequence | @item.TodoDesc</h4>
}
